<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10.5dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/color_custom_blue1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dev_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/baseline_photo_camera_back_24"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/white"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/dev_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CodeCraftPro"
            android:textColor="@color/white"
            android:layout_below="@+id/dev_image"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="14dp"/>

        <TextView
            android:id="@+id/dev_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developer"
            android:textColor="@color/white"
            android:layout_below="@+id/dev_name"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="14dp"/>

        <TextView
            android:id="@+id/dev_description"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Passionate IT student dedicated to mastering technology, problem solving enthusiast, coding wizard, and eager learner with a creative mindset"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:layout_below="@+id/dev_role"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>